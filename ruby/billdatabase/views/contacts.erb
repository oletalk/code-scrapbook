<!doctype html>
<HTML>
  <HEAD>
    <TITLE>sender contacts</TITLE>
    <link rel="stylesheet" href="/css/default.css">
  </HEAD>
  <BODY>

    <h2>Contact Sender</h2>
    <%= erb :nav, { :locals => { :page => 'sender contacts'} } %>
    <div class="layout">
      <ul>
      <% @senders.each do |sender| %>
      <li>
        <a href="/sender/<%= sender.id %>"><%= sender.name%></a>
        <ul>
        <% sender.sender_contacts.each_with_index do |contact, index| %>
        <li>
          <%= contact.name %> - <%= contact.contact%>
          <% unless contact.comments.empty? %> (<%= contact.comments %>)<% end %>
        </li>
        <% end %>
        </ul>
      </li>
      <% end %>
      </ul>
    </ul>
  </BODY>
</HTML>
